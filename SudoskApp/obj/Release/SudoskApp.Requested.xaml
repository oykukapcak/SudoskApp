<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SudoskApp.Requested">
	<ContentPage.Content>
		<ListView x:Name="list" ItemTapped="Handle_ItemTapped">
		    <ListView.ItemTemplate>
		      <DataTemplate>
		        <ViewCell>
		          <StackLayout Orientation="Horizontal">
		            <Image></Image>
		            <StackLayout Orientation="Vertical">
						<Label Text="{Binding Name}"></Label>
						<Label Text="{Binding BeginDate}"></Label>
						<Label Text="{Binding EndDate}"></Label>
						<Label Text="{Binding EventId}"></Label>		
						<Label Text="{Binding UserId}"></Label>
		              <!--<Label Text="Orange Marmot"></Label>
		              <Label Text="28-08-2016 - 31-08-2016"></Label>
		              <Label Text="Kaçkarlar"></Label>
		              <Label Text="Öykü Kapcak"></Label>-->
		              <Button Text="Confirm"></Button>
		            </StackLayout>
		          </StackLayout>
		        </ViewCell>
		      </DataTemplate>
		    </ListView.ItemTemplate>
		</ListView>
	</ContentPage.Content>
</ContentPage>
