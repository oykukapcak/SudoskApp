<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SudoskApp.Booking">
	<ContentPage.Content>
		<StackLayout>
			<Image></Image>
			<Label Text="{Binding Name}"></Label>
			<Label Text="{Binding Category}"></Label>
			<Label Text="{Binding Description}"></Label>
			<Label Text="Choose Date"></Label>
			<StackLayout Orientation="Horizontal">
				<DatePicker x:Name="date1" Format="dd-mm-yyyy" ></DatePicker>
				<DatePicker x:Name="date2" Format="dd-mm-yyyy" ></DatePicker>
			</StackLayout>
			<Label Text="Choose event"></Label>
			<Picker x:Name="picker" Title="Events"></Picker>
			<Button Text="Send Request" Clicked="OnRequestClicked"></Button>
		</StackLayout>
	</ContentPage.Content>
</ContentPage>
